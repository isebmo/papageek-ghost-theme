{{! The main content area on the homepage }}
<main id="posts" class="content  grid-3-small-2 has-gutter" role="main">

    {{! Each post will be output using this markup }}
    {{#foreach posts}}

        <article class="{{post_class}}" {{#if image}}style="background-image: url('{{image}}'); background-size: cover; -webkit-transform: translate3d(0,0,0);"{{/if}}>

            <div class="posts-meta">
                <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                <time datetime="{{date format='DD/MM/YYYY'}}">{{date format="DD/MM/YYYY"}}</time>
                <div>{{tags separator=" | "}}</div>
            </div>

        </article>


    {{/foreach}}

</main>
